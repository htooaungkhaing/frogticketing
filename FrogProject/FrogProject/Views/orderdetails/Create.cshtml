@model FrogProject.orderdetail

@{
    ViewBag.Title = "Order";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <!DOCTYPE html>
    <html lang="en">
    <head>
         
        <script src="~/Scripts/jquery-3.3.1.js"></script>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script> 
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta name="description" content="">
        <meta name="keywords" content="">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <title>Neuron Template - Contact</title>
        <!--

        Template 2085 Neuron

        http://www.tooplate.com/view/2085-neuron

        -->
        <link rel="stylesheet" href="~/Content/bootstrap.min.css">
        <link rel="stylesheet" href="css/font-awesome.min.css">

        <!-- Main css -->
        <link rel="stylesheet" href="~/Content/style.css">
        <link href="https://fonts.googleapis.com/css?family=Lora|Merriweather:300,400" rel="stylesheet">


        <style>
            .update {
                height: 34px;
                margin-top: 20px !important;
                margin-bottom: 10px !important;
            }
            .update1 {
                height: 34px;
                margin-top: 10px !important;
                margin-bottom: 10px !important;
            }
        </style>
    </head>
    <body>

        <!-- Home Section -->

        <section id="home" class="main-home parallax-section" style="background-image:url(../../images/pic02.jpg)">
            <div class="overlay"></div>
            <div id="particles-js"></div>
            <div class="container">
                <div class="row">

                    <div class="col-md-12 col-sm-12">

                        <h1>Order at Here!</h1>

                    </div>

                </div>
            </div>
        </section>
        <!-- Contact Section -->

        <section id="contact">
            <div class="container">
                <div class="row">

                    <div class="form-horizontal">

                        <hr />
                        <div>
                            <div class="clearfix"></div>

                            <div class="col-md-4 col-sm-4">
                                <img src="~/images/no-u-turn.jpg" class="img-responsive" alt="Blog Image">
                                <h3> No U Turn</h3>
                                <p>No U Turn is righr here. Ye'Ngwe Soe(The Holligan) with his band will perform the whole night. Jump with Punk music at Cuba Bar. 12900mmk per one person. @Html.ActionLink("Order", "Create", "orderdetails") now and enjoy with alternative punk music. The show will be at April 11 2019 and only 100 tickets avaliable.  </p>
                            </div>

                            <div class="col-md-4 col-sm-4">
                                <img src="~/images/42334227_177334776549733_6998163824625712190_n.jpg" class="img-responsive" alt="Blog Image">
                                <h3> Jam it</h3>
                                <p> 4th time Jam It is coming. Jam It! is a small, dynamic, independent initiative that strives to give young Burmese musicians and artists a voice and allow them the opportunity to be part of a creative and empowered new generation in Myanmar. Let's jump at The Basement Bar at May 5. Only 100 tickets avaliable so don't miss the chance. </p>
                            </div>

                            <div class="col-md-4 col-sm-4">
                                <img src="~/images/pic09.jpg" class="img-responsive" alt="Blog Image">
                                <h3>Rocky Night</h3>
                                <p>This is the reunion of Emperor Rock Band. These rock legends rest for long time and they came back again. Don't miss the chance. At December 1 2019, let hit Yangon with Rock music at Hard Rock Cafe. Only 100 tickets is avaliable so let's @Html.ActionLink("Order", "Create", "orderdetails") now. </p>
                            </div>
                        </div>
                        <p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p>
                        <br />
                        <hr/>
                        <p>Please fill correct information.</p>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.ValidationMessage("Error", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.EventName, "EventName", htmlAttributes: new { @class = "control-label col-md-2 update1  " })
                             
                            <div class="col-md-10">
                                @Html.DropDownList("EventName", null, htmlAttributes: new { @class = "form-control" }) 
                             
                                @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
                            </div>
                            <div style="display:none;">@ViewBag.price                 
                            </div>
                            <div style="display:none;">
                            @ViewBag.Eventqty
                        </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @min = 0, id = "Id" } })
                                @*<div style="color:red;">@ViewBag.names</div>*@
                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SecondPhone, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SecondPhone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SecondPhone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "control-label col-md-2 update" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input id="submitbutton" type="submit" value="Order" class="btn btn-default" />
                            </div>
                        </div>
                        <script>
                            $(document).ready(function () {
                                $("#submitbutton").submit(function () {
                                    var qty = $('#Id').val();
                                    var price = $('#Eventprice').val();
                                    var qty1 = $('#Eventqty').val();           
                                });
                           });
                        </script>
                    </div>
                    

                    <div>
                       @Html.ActionLink("Watch Record", "Index",new {ViewBag.Total,ViewBag.id})
                    </div>
 
                </div>
            </div>
        </section>

        <!-- Footer Section -->

        <footer>
            <div class="container">
                <div class="row">

                    <div class="col-md-5 col-md-offset-1 col-sm-6">
                        <h3>FrogTicketing</h3>
                        <p>The Best and trustest online event ticket selling in Myanmar.</p>
                        <div class="footer-copyright">
                            <p>Copyright &copy; 2019 FrogTicketing - Design: Tooplate</p>
                        </div>
                    </div>

                    <div class="col-md-4 col-md-offset-1 col-sm-6">
                        <h3>Talk to us</h3>
                        <p><i class="fa fa-globe"></i> 428(A),Ground Floor, Zaya 15th Street, 10th Quarter, South Okkalapa Tsp, Yangon</p>

                        <p><i class="fa fa-phone"></i> +959 956 608 416</p>
                        <p><i class="fa fa-save"></i> info@frogticketing.com</p>
                    </div>

                    <div class="clearfix col-md-12 col-sm-12">
                        <hr>
                    </div>



                </div>
            </div>
        </footer>

        <!-- SCRIPTS -->

    </body>

</html>
}




